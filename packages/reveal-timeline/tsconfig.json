{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}