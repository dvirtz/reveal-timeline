{
  "name": "reveal-timeline",
  "version": "0.0.0-development",
  "description": "reveal.js plugin for integrating timeline.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "test": "jest",
    "demo": "cd demo && reveal-md reveal-timeline.md -w",
    "pretest": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dvirtz/reveal-timeline.git"
  },
  "author": {
    "name": "Dvir Yitzchaki",
    "email": "dvirt@gmail.com",
    "url": "https://github.com/dvirtz"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@knight-lab/timelinejs": "^3.8.21",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^28.1.3",
    "@types/reveal": "^4.2.0",
    "@types/reveal.js": "npm:@types/reveal@^4.2.0",
    "@types/rewire": "^2.5.28",
    "css-loader": "^6.7.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "less": "^4.1.3",
    "less-loader": "^11.0.0",
    "reveal-md": "^5.3.3",
    "rewire": "^6.0.0",
    "semantic-release": "^19.0.3",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "reveal.js": "^4.3.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "footer-max-line-length": [
        0,
        "always"
      ]
    }
  }
}
